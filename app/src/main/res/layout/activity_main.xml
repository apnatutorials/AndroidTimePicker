<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apnatutorials.androidtimepicker.MainActivity">


    <TextView
        android:id="@+id/tvLabelToDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="To time"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvToTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLabelToDate"
        android:layout_marginBottom="10dp"
        android:background="@drawable/time_selector"
        android:text="Click to add To time" />


    <TextView
        android:id="@+id/tvLabelFromDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvToTime"
        android:layout_marginBottom="10dp"
        android:text="From time"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFromTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLabelFromDate"
        android:background="@drawable/time_selector"
        android:text="Click to add From time" />

</RelativeLayout>
